<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
android:background="@drawable/bg"
        tools:context=".MainActivity">

    <Button
            android:background="@color/merah"
            android:text="@string/login"
            android:layout_width="100dp"
            android:layout_height="wrap_content" android:id="@+id/button13"/>
    <EditText
            android:hint="@string/inputkan_nama_anda"
            android:inputType="numberPassword"
            android:gravity="center"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button14"/>
    <Button

            android:text="Button"
            android:textSize="30sp"
            android:fontFamily="casual"
            android:textAllCaps="false"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button12" android:layout_weight="1"/>
</LinearLayout>